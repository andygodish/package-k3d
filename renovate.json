
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.ya?ml$"],
      "matchStrings": [
        "- name: K3D_PACKAGE_VERSION\\s*\\n\\s*description: \"Version of the UDS K3d package\"\\s*\\n\\s*default: \"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "defenseunicorns/uds-k3d",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": ["^zarf-config\\.toml$"],
      "matchStrings": [
        "K3D_IMAGE\\s*=\\s*\"(?<depName>rancher/k3s):(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["defenseunicorns/uds-k3d"],
      "groupName": "UDS K3d Package",
      "semanticCommitType": "deps",
      "semanticCommitScope": "k3d",
      "commitMessageTopic": "UDS K3d package"
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["rancher/k3s"],
      "groupName": "K3s Image",
      "semanticCommitType": "deps",
      "semanticCommitScope": "k3s",
      "commitMessageTopic": "K3s image"
    }
  ]
}
